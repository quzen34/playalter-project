# Environment variables for PLAYALTER Backend
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# n8n Configuration
N8N_HOST=http://localhost:5678
N8N_API_KEY=your-n8n-api-key-here
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_SECURE_COOKIE=false
N8N_ENCRYPTION_KEY=your-n8n-encryption-key

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=your-flask-secret-key-here

# Database Configuration (if needed)
DATABASE_URL=sqlite:///playalter.db

# Redis Configuration (for caching/queues)
REDIS_URL=redis://localhost:6379/0

# Other API Keys
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-certificate
FACE_SWAP_API_KEY=your-face-swap-api-key
AR_MASK_API_KEY=your-ar-mask-api-key
