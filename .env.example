# PLAYALTER Project Environment Configuration - TEMPLATE
# Copy this file to .env and fill in your actual values
# NEVER commit actual .env file to git!

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-openai-org-id-here

# Stripe Configuration  
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here
STRIPE_PRICE_ID=price_your-stripe-price-id-here

# n8n Configuration
N8N_WEBHOOK_URL=https://your-domain.app.n8n.cloud/webhook-test/webhook/stripe
N8N_HOST=http://localhost:5678
N8N_SECURE_COOKIE=false
N8N_ENCRYPTION_KEY=your-n8n-encryption-key-here
N8N_USER_MANAGEMENT_JWT_SECRET=your-n8n-jwt-secret-here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=your-flask-secret-key-here

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# Database Configuration
DATABASE_URL=sqlite:///playalter.db
POSTGRES_URL=postgresql://user:password@localhost:5432/playalter

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Replicate API Configuration
REPLICATE_API_TOKEN=r8_your-replicate-api-token-here

# Replicate Vercel Integration
REPLICATE_VERCEL_INTEGRATION_ID=icfg_your-vercel-integration-id-here
REPLICATE_VERCEL_TOKEN=r8_your-vercel-token-here

# Vercel Configuration
VERCEL_TOKEN=vercel_your-vercel-token-here
VERCEL_ORG_ID=your-vercel-org-id-here
VERCEL_PROJECT_ID=your-vercel-project-id-here

# Agora Configuration (for live streaming)
AGORA_APP_ID=your-agora-app-id-here
AGORA_APP_CERTIFICATE=your-agora-app-certificate-here
AGORA_TOKEN_EXPIRATION_TIME=3600

# Security & Session
JWT_SECRET_KEY=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-here

# Production Settings (for deployment)
NODE_ENV=development
PYTHON_ENV=development

# Webhook Secrets (for platform integrations)
WEBHOOK_SECRET_STRIPE=your-stripe-webhook-secret-here
WEBHOOK_SECRET_N8N=your-n8n-webhook-secret-here
WEBHOOK_SECRET_VERCEL=your-vercel-webhook-secret-here
